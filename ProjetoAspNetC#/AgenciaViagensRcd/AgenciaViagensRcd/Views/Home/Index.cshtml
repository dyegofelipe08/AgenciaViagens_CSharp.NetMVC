@{
    ViewData["Title"] = "Home Page";
}

<header>
    <div id="carouselExampleControls" class="carousel slide mt-0 pt-0" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100 img-fluid" src="https://www.flytap.com/-/media/Flytap/new-tap-pages/destinations/south-america/brazil/recife/recife-banner-mobile-1024x553.jpg" alt="recife.jpg" height="500">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 img-fluid" src="https://www.melhoresdestinos.com.br/wp-content/uploads/2019/08/rio-de-janeiro-capa2019-01.jpg" alt="rio_de_janeiro.jpg" height="500">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 img-fluid" src="https://guardemais.com.br/wp-content/uploads/2021/06/joao-pessoa-paraiba.jpg" alt="joao_pessoa.jpg" height="500">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 img-fluid" src="https://www.cognatis.com.br/qds2/wp-content/uploads/2021/01/Sao-Paulo-467-banner-1.jpg" alt="sao_paulo.jpg" height="500">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 img-fluid" src="https://www.melhoresdestinos.com.br/wp-content/uploads/2019/02/passagens-aereas-curitiba-capa2019-02.jpg" alt="curitiba" height="500">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Anterior</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Próximo</span>
        </a>
    </div>
</header>

<main>
    <div style="background-color: #448aff " class="jumbotron jumbotron-fluid text-white">
        <div class="container text-center">
            <h1 class="display-3">Brasil Sem Fronteiras</h1>
            <p class="lead">Bem-vindo ao nosso site! Aqui você encontra passagens aéreas para as principais capitais do nosso lindo Brasil. Curta o melhor da nossa nação!</p>
        </div>
    </div>

    <a asp-controller="Cliente" asp-action="Create" class="btn btn-success btn-lg btn-block">Clique aqui para realizar seu cadastro</a><br />
</main>




