@model AgenciaViagensRcd.Models.Suporte

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-2">Fale conosco</h1>

<h4 class="display-4">Estamos dispostos a ajudar você...</h4>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Mensagem" class="control-label">Descreva o que deseja:</label>
                    <textarea cols="100" rows="5" asp-for="Mensagem" class=""></textarea>
                    <span asp-validation-for="Mensagem" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClienteIdCliente" class="control-label">Selecione seu CPF:</label>
                    <select asp-for="ClienteIdCliente" class="form-control" asp-items="ViewBag.ClienteIdCliente"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Enviar" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
    <p class="lead">
        Ainda não está cadastrado?  <a asp-controller="Cliente" asp-action="Create">Clique aqui!</a><br />
    </p>
</div>

<div class="container text-center">
    <a asp-controller="Home" asp-action="Index" class="btn btn-success">Voltar ao início</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
